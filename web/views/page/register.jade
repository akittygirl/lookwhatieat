extends layout

block content

	div.row-fluid
		div#page-title.span4.offset4
				h2 #{global.c("account","register_title")}
	div.row-fluid
		div#wrapper.lr-page.full.span4.offset4
			div.row-fluid
				div#login-form.span12
					//div.page-title-small
						h3 use your account
					a(href="/auth/facebook").facebook_connect
						div.img 
							i.fa-icon-facebook
						div.text
							| #{global.c("account","register_with_facebook")}
					//a(href="").twitter_connect
						div.img 
							i.fa-icon-twitter
						div.text
							| Register with Twitter
					div.page-title-small
						h3(style="background:#f0f0f0") or
					form
						div.row-fluid
							input#email(name="email",type="text",placeholder=global.c("account","email_placeholder")).span12
							input#pass(name="password",type="text",placeholder=global.c("account","password_placeholder")).span12
							input#cpass(name="confirm_password",type="text",placeholder=global.c("account","confirm_password_placeholder")).span12
						div.actions
							button(type="call-create",data-call="account").btn.btn-success.span12 #{global.c("account","create_account")}

